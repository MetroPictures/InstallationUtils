#! /bin/bash

# METROPICTURES
SUBNET=192.168.0
PATH_TO_INSTALLATION_UTILS=""	#set me!


# Controller
alias metropictures.startup="python controller.py startup"
alias metropictures.shutdown="python controller.py shutdown"


# Splendid Isolation
export SI_ADDR=$SUBNET.200
SI_B_PORT=8080
alias metropictures.splendidisolation="ssh -i $PATH_TO_INSTALLATION_UTILS/metropictures -o PubkeyAuthentication=yes -o IdentitiesOnly=yes-o PubkeyAuthentication=no pi@$SI_ADDR -L $SI_B_PORT:localhost:8080"

# Is He Cheating?
export IHC_ADDR=$SUBNET.204
IHC_B_PORT=8084
